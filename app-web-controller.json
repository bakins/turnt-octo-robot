{
    "apiVersion": "v1beta3",
    "kind": "ReplicationController",
    "metadata": {
        "labels": {
            "name": "app-web"
        },
        "name": "app-web-controller"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "name": "app-web"
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "app-web",
                    "name": "app-web"
                }
            },
            "spec": {
                "containers": [
                    {
                        "env": [
                            {
                                "name": "DB_USER",
                                "value": "myuser"
                            },
                            {
                                "name": "DB_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "DB_NAME",
                                "value": "appdatabase"
                            }
                        ],
                        "image": "quay.io/bakins/turnt-octo-robot",
                        "name": "turnt-octo-robot",
                        "volumeMounts": [
                            {
                                "mountPath": "/conf/stack",
                                "name": "config"
                            }
                        ]
                    },
                    {
                        "image": "quay.io/quay/quay:b10fd4f",
                        "name": "app-web",
                        "privileged": true,
                        "ports": [
                            {
                                "containerPort": 80,
                                "name": "http-server",
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {},
                        "volumeMounts": [
                            {
                                "mountPath": "/datastorage",
                                "name": "storage"
                            },
                            {
                                "mountPath": "/conf/stack",
                                "name": "config"
                            }
                        ]
                    }
                ],
                "volumes": [
                    {
                        "hostPath": {
                            "path": "/home/core/storage"
                        },
                        "name": "storage"
                    },
                    {
                        "emptyDir": {
                            "medium": ""
                        },
                        "name": "config"
                    }
                ]
            }
        }
    }
}
