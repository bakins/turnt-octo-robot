{
    "apiVersion": "v1beta3",
    "kind": "ReplicationController",
    "metadata": {
        "labels": {
            "name": "app-mysql"
        },
        "name": "app-mysql"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "name": "app-mysql"
        },
        "template": {
            "metadata": {
                "labels": {
                    "name": "app-mysql"
                }
            },
            "spec": {
                "containers": [
                    {
                        "env": [
                            {
                                "name": "MYSQL_ROOT_PASSWORD",
                                "value": "root_password"
                            },
                            {
                                "name": "MYSQL_USER",
                                "value": "myuser"
                            },
                            {
                               "name": "MYSQL_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "MYSQL_DATABASE",
                                "value": "appdatabase"
                            }
                        ],
                        "image": "mysql:5.7",
                        "name": "app-mysql",
                        "ports": [
                            {
                                "containerPort": 3306,
                                "protocol": "TCP"
                            }
                        ]
                    }
                ],
                "volumes": null
            }
        }
    }
}
